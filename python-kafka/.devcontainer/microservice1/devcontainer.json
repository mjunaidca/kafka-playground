{
    "name": "Microservice1 Container",
    "dockerComposeFile": ["../../compose.yml"],
    "service": "microservice1", // This Shall be same as the service name in docker-compose.yml
    "shutdownAction": "none",
    "workspaceFolder": "/code",
    // "postCreateCommand": "poetry install && alembic upgrade head && python app/init_data.py  && python -c 'print(\" CONTAINER STARTED - Start RUN FASTAPI SERVER NOW...\")'"  ,
    "forwardPorts": [
        "8000:8000"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.makefile-tools",
                "github.copilot",
                "github.copilot-chat",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}